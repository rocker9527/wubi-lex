namespace app.lexNetContents{
	
	getTable = function(){
		var dataPath = ..io.appData("/aardio/std/wubi/lex-default.table");
	
		if(..io.exist(dataPath)){
			var result;
			try{
				result = eval(..string.load(dataPath))
			}
			
			if(result){
				return result;
			} 
		}
		
		return defaultData;	
	}
	
	update = function(){
		..thread.invoke( 
			function(){
				import inet.http;
				var http = inet.http();
				http.disableCache();
				
				var bin = http.get("http://wubi.aardio.com/download/lex/_index.txt");
				if(bin){
					string.save(..io.appData("/aardio/std/wubi/lex-default.table"), bin) 
				}
			}
		) 
	} 
	
